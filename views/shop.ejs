    <%- include('./partials/header') %>

    <div class="w-full min-h-screen flex items-start px-10 py-10 bg-gradient-to-r from-gray-100 via-gray-200 to-gray-300">
        <!-- Sidebar -->
        <div class="w-[25%] flex flex-col items-start space-y-6 bg-white shadow-md p-6 rounded-xl">
            <div class="flex items-center gap-2">
                <h3 class="text-lg font-semibold">Sort by</h3>
                <form action="/shop">
                    <select class="border px-3 py-2 rounded-lg focus:ring-2 focus:ring-gray-400" name="sortby">
                        <option value="popular">Popular</option>
                        <option value="newest">Newest</option>
                    </select>
                </form>
            </div>
    
            <div class="flex flex-col space-y-3 text-gray-700">
                <h4 class="text-lg font-semibold">Categories</h4>
                <a class="hover:text-gray-900 transition" href="#">New Collection</a>
                <a class="hover:text-gray-900 transition" href="#">All Products</a>
                <a class="hover:text-gray-900 transition" href="#">Discounted Products</a>
            </div>
    
            <div class="flex flex-col space-y-3 text-gray-700">
                <h4 class="text-lg font-semibold">Filter by</h4>
                <a class="hover:text-gray-900 transition" href="#">Availability</a>
                <a class="hover:text-gray-900 transition" href="#">Discount</a>
            </div>
        </div>
    
        <!-- Product Grid -->
        <div class="w-[75%] grid grid-cols-3 gap-6 p-6">
            <% products.forEach(function(product){ %>
                <div class="bg-white shadow-lg rounded-xl overflow-hidden transition-transform hover:scale-105">
                    <div class="w-full h-56 flex items-center justify-center bg-[<%= product.bgcolor %>] rounded-t-xl">
                        <img class="h-44 object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                    </div>
                    <div class="flex justify-between bg-[<%= product.panelcolor %>] p-4 text-[<%= product.textcolor %>] rounded-b-xl">
                        <div>
                            <h3 class="text-lg font-semibold"><%= product.name %></h3>
                            <h4 class="text-md font-medium">₹ <%= product.price %></h4>
                        </div>
                        <a class="w-10 h-10 flex items-center justify-center rounded-full bg-gray-200 hover:bg-gray-300 transition" href="#">
                            <i class="ri-add-line text-xl"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    
    <%- include('./partials/footer') %>
    