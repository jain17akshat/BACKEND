     <%- include('./partials/header') %>

<% if(success.length > 0) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 p-3 rounded-lg bg-blue-500 shadow-lg text-white text-center">
        <%= success %>
    </div>
<% } %>

<div class="w-full min-h-screen flex px-16 py-12 gap-10">
    <!-- Sidebar -->
    <aside class="w-1/4 space-y-10">
        <div class="flex items-center gap-3 text-gray-700">
            <h3 class="font-semibold">Sort by:</h3>
            <form action="/shop">
                <select class="border rounded-lg px-3 py-1 focus:ring-2 focus:ring-gray-400" name="sortby">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        <div class="space-y-4 text-gray-700">
            <h3 class="font-semibold">Categories</h3>
            <a class="block hover:text-blue-500 transition" href="#">New Collection</a>
            <a class="block hover:text-blue-500 transition" href="#">All Products</a>
            <a class="block hover:text-blue-500 transition" href="#">Discounted Products</a>
        </div>
        <div class="space-y-4 text-gray-700">
            <h3 class="font-semibold">Filter by:</h3>
            <a class="block hover:text-blue-500 transition" href="#">Availability</a>
            <a class="block hover:text-blue-500 transition" href="#">Discount</a>
        </div>
    </aside>

    <!-- Product Grid -->
    <main class="w-3/4 grid grid-cols-3 gap-6">
        <% products.forEach(function(product) { %>
            <div class="shadow-md rounded-lg overflow-hidden border border-gray-200">
                <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                    <img class="h-44 object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                </div>
                <div class="p-4 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                    <h3 class="text-lg font-semibold"><%= product.name %></h3>
                    <h4 class="text-xl font-bold">₹ <%= product.price %></h4>
                    <div class="mt-3 flex justify-end">
                        <a class="w-9 h-9 flex items-center justify-center rounded-full bg-white shadow-md hover:bg-gray-100 transition" href="/addtocart/<%=product._id%>">
                            <i class="ri-add-line text-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </main>
</div>

<%- include('./partials/footer') %>